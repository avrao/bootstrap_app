<%- model_class = Tool -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @tool.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title_link) %>:</strong></dt>
  <dd><%= @tool.title_link %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owned_by) %>:</strong></dt>
  <dd><%= @tool.owned_by %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purpose) %>:</strong></dt>
  <dd><%= @tool.purpose %></dd>
  <dt><strong><%= model_class.human_attribute_name(:added_by) %>:</strong></dt>
  <dd><%= @tool.added_by %></dd>
  <dt><strong><%= model_class.human_attribute_name(:added_on) %>:</strong></dt>
  <dd><%= @tool.added_on %></dd>
  <dt><strong><%= model_class.human_attribute_name(:outdated) %>:</strong></dt>
  <dd><%= @tool.outdated %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tools_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tool_path(@tool), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tool_path(@tool),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
