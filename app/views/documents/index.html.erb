
<%- model_class = Document -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h3>
</div>
<!--<table class="table table-striped">-->
<table class="table table-striped sortable">
  <thead>
    <tr>
      <!--<th><%= model_class.human_attribute_name(:id) %></th>-->
      <th><%= model_class.human_attribute_name(:title) %></th>
     <!-- <th><%= model_class.human_attribute_name(:title_link) %></th>-->
      <th><%= model_class.human_attribute_name(:owned_by) %></th>
      <th><%= model_class.human_attribute_name(:purpose) %></th>
      <th><%= model_class.human_attribute_name(:added_by) %></th>
      <th><%= model_class.human_attribute_name(:added_on) %></th>
      <th><%= model_class.human_attribute_name(:outdated) %></th>
      <!--<th><%= model_class.human_attribute_name(:created_at) %></th>-->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |document| %>
      <tr>
       <!-- <td><%= link_to document.id, document_path(document) %></td>-->
        <td><%= link_to document.title, document.title_link %></td>
        <!--<td><%= document.title_link %></td>-->
        <td><%= document.owned_by %></td>
        <td><%= document.purpose %></td>
        <td><%= document.added_by %></td>
        <td><%= document.added_on %></td>
        <td><%= document.outdated %>place holder</td>
        <!--<td><%=l document.created_at %></td>-->
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_document_path(document), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      document_path(document),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_document_path,
            :class => 'btn btn-primary' %>
